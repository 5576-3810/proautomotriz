@model IEnumerable<Automotriz.Models.EMPLEADO>

@Styles.Render("~/bundles/css")
@Scripts.Render("~/bundles/script")

@*<style>
        .table-striped tbody tr:nth-child(odd) td,
        .table-striped tbody tr:nth-child(odd) th {
            background-color: #D8D8D8;
        }
    </style>*@

@{
    <title>Lista de Empleados Disponibles</title>

}

<section class="content">
    <div class="row">
        <div class="col-md-12">
        </div><!-- /.col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <p>
                        @Html.ActionLink("Ingresar un Nuevo Empleado", "Create")
                    </p>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive mailbox-messages">
                        <table id="tblCargo" class="table table-striped table-bordered dt-responsive display">
                            <thead>
                                <tr>
                                    <th nowrap>
                                        @Html.DisplayName("Nombre(s)")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Apellidos")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Cargo de")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Horario")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Telefono")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Direccion")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("Ciudad")
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayName("DPI")
                                    </th>
                                   

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td nowrap>
                                        @item.NOMBRE
                                    </td>
                                    <td nowrap>
                                        @item.APELLIDO
                                    </td>
                                    <td nowrap>
                                        @item.ROL
                                    </td>
                                    <td nowrap>
                                        @item.HORARIO
                                    </td>
                                    <td nowrap>
                                        @item.TELEFONO
                                    </td>
                                    <td nowrap>
                                        @item.DIRECCION
                                    </td>
                                    <td nowrap>
                                        @item.CIUDAD
                                    </td>
                                    <td nowrap>
                                        @item.DPI
                                    </td>
                                   

                                    <td nowrap>
                                        <button title="Editar" onclick="location.href='@Url.Action("Edit", new { id = item.ID_EMPLEADO })';return false;" class="btn btn-default btn-sm"><i class="fa fa-pencil">Editar</i></button>
                                        <button title="Detalles" onclick="location.href='@Url.Action("Details", new { id = item.ID_EMPLEADO })'; return false;" class="btn btn-default btn-sm"><i class="fa fa-list">Detalles</i></button>
                                        <button title="Eliminar" onclick="location.href='@Url.Action("Delete", new { id = item.ID_EMPLEADO })'; return false;" class="btn btn-default btn-sm"><i class="fa fa-trash-o">Eliminar</i></button>
                                    </td>
                                </tr>
                                }
                            </tbody>


                        </table><!-- /.table -->
                        <div>
                            @Html.ActionLink("Regresar", "Index", "Home")
                        </div>
                    </div><!-- /.mail-box-messages -->
                </div><!-- /.box-body -->
            </div><!-- /. box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblCargo').DataTable({
            "destroy": true,
            "data": null,
            scrollX:true,
            "order": [[0, "asc"]],
            responsive: "true",
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<button class="btn btn-secondary"><i class="fa fa-files-o"></i></button>',
                    titleAttr: 'Copiar'
                },
                {
                    extend: 'excelHtml5',
                    text: '<button class="btn btn-success"><i class="fa fa-file-excel-o" aria-hidden="true"></i></button>',
                    titleAttr: 'Exportar Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<button class="btn btn-primary"><i class="fa fa-file-text-o"></i></button>',
                    titleAttr: 'Exportar CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<button class="btn btn-danger"><i class="fa fa-file-pdf-o" aria-hidden="true"></i></button>',
                    titleAttr: 'Exportar PDF'
                },
                {
                    extend: 'print',
                    text: '<button class="btn btn-info"><i class="fa fa-print" aria-hidden="true"></i></button>',
                    titleAttr: 'Imprimir'
                }
            ],
            language: {
                "lengthMenu": "Mostrar _MENU_ registros",
                "zeroRecords": "No se encontraron resultados",
                "info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                "bFilter": true,
                "sSearch": "Buscar:",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
                "sProcessing": "Procesando...",
            },
            //Esto se utiliza para quitar el ordenamiento automatico
            "aaSorting": []
        });
    });
</script>
